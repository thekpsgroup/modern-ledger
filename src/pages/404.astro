---
import Layout from '../layouts/Layout.astro';

const title = 'Page Not Found - Modern Ledger';
const description = 'The page you are looking for could not be found. Return to Modern Ledger for professional bookkeeping services in Texas.';
---

<Layout title={title} description={description}>
  <section class="section">
    <div class="container text-center">
      <div class="max-w-2xl mx-auto">
        <div class="mb-8">
          <h1 class="heading-1 mb-4">404</h1>
          <h2 class="heading-3 mb-6 text-neutral-600">Page Not Found</h2>
          <p class="body-lg mb-8 text-neutral-500">
            Sorry, the page you are looking for doesn't exist or has been moved.
            Let's get you back on track with our professional bookkeeping services.
          </p>
        </div>

        <div class="flex flex-col gap-4 sm:flex-row sm:justify-center">
          <a href="/" class="btn btn-primary px-8">
            Go to Home
          </a>
          <a href="/services/bookkeeping" class="btn btn-outline px-8">
            View Services
          </a>
        </div>

        <div class="mt-12">
          <p class="text-sm text-neutral-400">
            Need help? <a href="/contact" class="text-brand-navy hover:text-brand-gold">Contact us</a> or call (469) 534-3392
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>