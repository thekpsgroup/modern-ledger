---
import Layout from '../layouts/Layout.astro';
import { getEnv } from '../lib/env';

const env = getEnv();
const pageTitle = "Resources | Modern Ledger Bookkeeping Tips & Business Insights";
const pageDescription = "Expert bookkeeping tips, tax strategies, and business growth insights from Modern Ledger. Stay ahead with our comprehensive guides and resources.";
const canonicalUrl = `${env.SITE_URL}/resources`;

// Blog categories
const categories = [
  { id: 'bookkeeping-tips', name: 'Bookkeeping Tips', color: 'blue', count: 2 },
  { id: 'tax-strategies', name: 'Tax Strategies', color: 'green', count: 1 },
  { id: 'growth-stories', name: 'Growth Stories', color: 'purple', count: 1 }
];

// Featured blog posts
const featuredPosts = [
  {
    slug: 'month-end-close-checklist',
    title: 'Month-End Close Checklist: 25 Steps to Audit-Ready Books (Texas Edition)',
    excerpt: 'Complete month-end close checklist for Texas businesses. Ensure your books are audit-ready and tax-prepared with this comprehensive 25-step guide.',
    category: 'Bookkeeping Tips',
    categoryColor: 'blue',
    date: 'September 15, 2025',
    readTime: '8 min read',
    image: '/images/blog/month-end-close-checklist.jpg',
    featured: true
  },
  {
    slug: 'quickbooks-cleanup',
    title: 'QuickBooks Cleanup: How to Get Your Books Back on Track',
    excerpt: 'Step-by-step guide to cleaning up messy QuickBooks files and getting accurate financial reports.',
    category: 'Bookkeeping Tips',
    categoryColor: 'blue',
    date: 'September 10, 2025',
    readTime: '6 min read',
    image: '/images/blog/quickbooks-cleanup.jpg',
    featured: false
  },
  {
    slug: 'texas-sales-tax',
    title: 'Texas Sales Tax Compliance: What Small Businesses Need to Know',
    excerpt: 'Essential guide to Texas sales tax requirements and compliance for small businesses.',
    category: 'Tax Strategies',
    categoryColor: 'green',
    date: 'September 5, 2025',
    readTime: '7 min read',
    image: '/images/blog/texas-sales-tax.jpg',
    featured: false
  },
  {
    slug: 'cash-vs-accrual',
    title: 'Cash vs Accrual Accounting: Which Method is Right for Your Business?',
    excerpt: 'Understanding the differences between cash and accrual accounting methods.',
    category: 'Growth Stories',
    categoryColor: 'purple',
    date: 'September 1, 2025',
    readTime: '5 min read',
    image: '/images/blog/cash-vs-accrual.jpg',
    featured: false
  }
];
---

<Layout title={pageTitle} description={pageDescription} canonical={canonicalUrl}>
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-brand-sky/30 to-blue-50 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-brand-navy mb-6">
            Resources & <span class="text-brand-gold">Insights</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            Expert bookkeeping tips, tax strategies, and business growth insights to help you manage your finances effectively and scale your Texas business.
          </p>
        </div>
      </div>
    </section>

    <!-- Categories Section -->
    <section class="py-12 bg-white border-b border-gray-100">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-wrap justify-center gap-4">
          {categories.map((category) => (
            <button
              class={`px-6 py-3 rounded-full font-medium transition-all duration-200 ${
                category.color === 'blue'
                  ? 'bg-blue-50 text-blue-700 hover:bg-blue-100 border border-blue-200'
                  : category.color === 'green'
                  ? 'bg-green-50 text-green-700 hover:bg-green-100 border border-green-200'
                  : 'bg-purple-50 text-purple-700 hover:bg-purple-100 border border-purple-200'
              }`}
              data-category={category.id}
            >
              {category.name} ({category.count})
            </button>
          ))}
        </div>
      </div>
    </section>

    <!-- Featured Posts Section -->
    <section class="py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-12 text-center">
          <h2 class="text-3xl md:text-4xl font-bold text-brand-navy mb-4">
            Latest Insights
          </h2>
          <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            Stay informed with our latest articles, guides, and expert advice for Texas businesses.
          </p>
        </div>

        <!-- Featured Post -->
        {featuredPosts.filter(post => post.featured).map((post) => (
          <article class="mb-16 bg-white rounded-2xl shadow-card border border-gray-100 overflow-hidden hover:shadow-card-hover transition-shadow duration-300">
            <div class="md:flex">
              <div class="md:w-1/2">
                <img
                  src={post.image}
                  alt={post.title}
                  class="w-full h-64 md:h-full object-cover"
                  loading="lazy"
                />
              </div>
              <div class="md:w-1/2 p-8 md:p-12 flex flex-col justify-center">
                <div class={`inline-flex items-center px-3 py-1 rounded-full text-sm font-medium mb-4 ${
                  post.categoryColor === 'blue'
                    ? 'bg-blue-50 text-blue-700'
                    : post.categoryColor === 'green'
                    ? 'bg-green-50 text-green-700'
                    : 'bg-purple-50 text-purple-700'
                }`}>
                  {post.category}
                </div>
                <h3 class="text-2xl md:text-3xl font-bold text-brand-navy mb-4 leading-tight">
                  <a href={`/resources/${post.slug}`} class="hover:text-brand-gold transition-colors">
                    {post.title}
                  </a>
                </h3>
                <p class="text-gray-600 mb-6 text-lg leading-relaxed">
                  {post.excerpt}
                </p>
                <div class="flex items-center justify-between text-sm text-gray-500">
                  <span>{post.date}</span>
                  <span>{post.readTime}</span>
                </div>
                <div class="mt-6">
                  <a
                    href={`/resources/${post.slug}`}
                    class="inline-flex items-center px-6 py-3 bg-brand-navy text-white font-medium rounded-lg hover:bg-brand-navy-dark transition-colors duration-200"
                  >
                    Read Full Article
                    <svg class="ml-2 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </article>
        ))}

        <!-- Regular Posts Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {featuredPosts.filter(post => !post.featured).map((post) => (
            <article class="bg-white rounded-xl shadow-card border border-gray-100 overflow-hidden hover:shadow-card-hover transition-all duration-300 group">
              <div class="aspect-video overflow-hidden">
                <img
                  src={post.image}
                  alt={post.title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
              </div>
              <div class="p-6">
                <div class={`inline-flex items-center px-2 py-1 rounded-full text-xs font-medium mb-3 ${
                  post.categoryColor === 'blue'
                    ? 'bg-blue-50 text-blue-700'
                    : post.categoryColor === 'green'
                    ? 'bg-green-50 text-green-700'
                    : 'bg-purple-50 text-purple-700'
                }`}>
                  {post.category}
                </div>
                <h3 class="text-xl font-bold text-brand-navy mb-3 leading-tight">
                  <a href={`/resources/${post.slug}`} class="hover:text-brand-gold transition-colors line-clamp-2">
                    {post.title}
                  </a>
                </h3>
                <p class="text-gray-600 mb-4 text-sm leading-relaxed line-clamp-3">
                  {post.excerpt}
                </p>
                <div class="flex items-center justify-between text-xs text-gray-500">
                  <span>{post.date}</span>
                  <span>{post.readTime}</span>
                </div>
              </div>
            </article>
          ))}
        </div>

        <!-- Load More Button -->
        <div class="text-center mt-12">
          <button class="px-8 py-4 bg-brand-gold text-brand-navy font-semibold rounded-lg hover:bg-brand-gold-dark transition-colors duration-200">
            Load More Articles
          </button>
        </div>
      </div>
    </section>

    <!-- Newsletter Signup -->
    <section class="py-20 bg-brand-navy">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
          Stay Updated
        </h2>
        <p class="text-xl text-white/80 mb-8">
          Get the latest bookkeeping tips and business insights delivered to your inbox.
        </p>
        <form class="max-w-md mx-auto">
          <div class="flex flex-col sm:flex-row gap-4">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 px-4 py-3 rounded-lg border-0 focus:ring-2 focus:ring-brand-gold"
              required
            />
            <button
              type="submit"
              class="px-6 py-3 bg-brand-gold text-brand-navy font-semibold rounded-lg hover:bg-brand-gold-dark transition-colors duration-200 whitespace-nowrap"
            >
              Subscribe
            </button>
          </div>
        </form>
      </div>
    </section>
  </div>
</Layout>

<script>
  // Category filtering functionality
  document.addEventListener('DOMContentLoaded', () => {
    const categoryButtons = document.querySelectorAll('[data-category]');
    const articles = document.querySelectorAll('article');

    categoryButtons.forEach(button => {
      button.addEventListener('click', () => {
        const category = (button as HTMLElement).dataset.category;

        // Update active button state
        categoryButtons.forEach(btn => {
          (btn as HTMLElement).classList.remove('ring-2', 'ring-brand-gold');
        });
        (button as HTMLElement).classList.add('ring-2', 'ring-brand-gold');

        // Filter articles
        articles.forEach(article => {
          const articleCategory = (article as HTMLElement).dataset.category;
          if (category === 'all' || articleCategory === category) {
            article.style.display = 'block';
          } else {
            article.style.display = 'none';
          }
        });
      });
    });
  });
</script>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style></content>
