---
import Layout from '../layouts/Layout.astro';
import { getEnv } from '../lib/env';
import LeadForm from '../components/LeadForm.astro';

const env = getEnv();
const pageTitle = "Contact Modern Ledger | Get Started Today";
const pageDescription = "Ready to get your books in order? Contact Modern Ledger for professional bookkeeping services. Free consultation available.";
const canonicalUrl = `${env.SITE_URL}/contact`;

const phoneDigits = env.COMPANY_PHONE.replace(/\D/g, '') || '0000000000';
const phoneDisplay = phoneDigits.replace(/(\d{3})(\d{3})(\d{4})/, '($1) $2-$3');
const phoneHref = `tel:+1${phoneDigits}`;
---

<Layout title={pageTitle} description={pageDescription} canonical={canonicalUrl}>
  <div class="page">
    <!-- Hero Section -->
    <section class="section section-muted">
      <div class="container">
        <div class="stack-sm text-center">
          <span class="eyebrow mx-auto">Contact</span>
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">Let’s get your books calm, clean, and actionable.</h1>
          <p class="text-body-lg text-neutral-500 mx-auto max-w-content-md">
            Tell us a little about your business and we’ll craft a bookkeeping plan that matches your pace, complexity, and growth goals.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Form Section -->
    <section class="section bg-white">
      <div class="container">
        <div class="grid gap-12 lg:grid-cols-[0.95fr_1.05fr]">
          <!-- Contact Info -->
          <div class="stack-sm">
            <div>
              <span class="eyebrow">Let’s talk</span>
              <h2 class="text-balance">Here’s how to reach the Modern Ledger team</h2>
              <p class="text-body-sm text-neutral-500">
                Whether you need an urgent cleanup, steady monthly support, or a fractional team to guide finance ops, we’re one quick message away.
              </p>
            </div>

            <div class="surface p-8">
              <div class="grid gap-6">
                <div class="flex items-start gap-4">
                  <div class="flex h-12 w-12 items-center justify-center rounded-full bg-brand-sky text-brand-navy">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-semibold text-brand-navy">Phone</p>
                    <p class="text-body-sm text-neutral-500"><a href={phoneHref} class="hover:text-brand-navy">{phoneDisplay}</a></p>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="flex h-12 w-12 items-center justify-center rounded-full bg-brand-sky text-brand-navy">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-semibold text-brand-navy">Email</p>
                    <p class="text-body-sm text-neutral-500">{env.COMPANY_EMAIL}</p>
                  </div>
                </div>

                <div class="flex items-start gap-4">
                  <div class="flex h-12 w-12 items-center justify-center rounded-full bg-brand-sky text-brand-navy">
                    <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                  </div>
                  <div>
                    <p class="text-sm font-semibold text-brand-navy">Service Areas</p>
                    <p class="text-body-sm text-neutral-500">
                      Royse City • Rockwall • Fate • Caddo Mills • Greenville • Quinlan • Rowlett • Wylie • Heath
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <div class="surface p-6">
              <p class="text-body-sm text-neutral-500">
                Prefer a quick consult first? <a class="font-semibold text-brand-navy" href="/pricing">Review pricing</a> or <a class="font-semibold text-brand-navy" href="/roi-calculator">run the ROI calculator</a> before we chat.
              </p>
            </div>
          </div>

          <LeadForm
            class="h-full"
            eyebrow="Send us a message"
            heading="Our team will respond within one business day"
            subheading="Tell us what you’re managing internally, where the bottlenecks live, and the support you’re looking for. We’ll follow up with a tailored plan and pricing."
            ctaLabel="Connect with Modern Ledger"
            successMessage="Thanks for reaching out! A Modern Ledger lead advisor will follow up within one business day."
            source="contact-page"
          />
        </div>
      </div>
    </section>
  </div>
</Layout>
