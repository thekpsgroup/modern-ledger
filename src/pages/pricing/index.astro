---
import Layout from '../../layouts/Layout.astro';
import CTASection from '../../components/CTASection.astro';
import FAQAccordion from '../../components/FAQAccordion.astro';
import LeadForm from '../../components/LeadForm.astro';
---

<Layout
  title="Bookkeeping Pricing | Modern Ledger - Royse City, TX"
  description="Transparent bookkeeping pricing for Texas businesses, delivering monthly reconciliation, financial clarity, and zero hidden fees from $499."
  ogImage="/og-pricing.jpg"
>
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="section bg-neutral-25">
      <div class="container">
        <div class="mx-auto max-w-content-lg text-center">
          <!-- Social Proof Badge -->
          <div class="mb-6">
            <div class="inline-flex items-center gap-2 rounded-full bg-green-100 px-4 py-2 text-sm font-semibold text-green-800">
              ðŸ’° Average client saves $3,200 annually vs. hiring in-house
            </div>
          </div>
          
          <span class="eyebrow mx-auto">Transparent Pricing</span>
          <h1 class="text-balance">Professional Bookkeeping That Pays for Itself</h1>
          <p class="text-body-lg text-neutral-500 mb-6">
            Get audit-ready books for 60-80% less than hiring full-time. No contracts, no hidden fees, guaranteed ROI.
          </p>

          <!-- Value Proposition Pills -->
          <div class="flex flex-wrap justify-center gap-3 mb-8">
            <div class="inline-flex items-center gap-2 rounded-full bg-white border border-neutral-200 px-4 py-2 text-sm">
              <svg class="h-4 w-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium text-neutral-700">No long-term contracts</span>
            </div>
            <div class="inline-flex items-center gap-2 rounded-full bg-white border border-neutral-200 px-4 py-2 text-sm">
              <svg class="h-4 w-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium text-neutral-700">30-day money-back guarantee</span>
            </div>
            <div class="inline-flex items-center gap-2 rounded-full bg-white border border-neutral-200 px-4 py-2 text-sm">
              <svg class="h-4 w-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
              </svg>
              <span class="font-medium text-neutral-700">Setup within 1-2 weeks</span>
            </div>
          </div>

          <!-- Enhanced Pricing Display -->
          <div class="mt-10 inline-flex flex-col items-center gap-2 rounded-2xl border border-brand-gold bg-gradient-to-br from-brand-sky/20 to-white px-8 py-6 shadow-elevation">
            <div class="flex items-center gap-2 mb-2">
              <span class="text-xs font-semibold uppercase tracking-widest text-neutral-400">Starting from</span>
              <div class="inline-flex items-center gap-1 rounded-full bg-red-100 px-2 py-1">
                <span class="text-xs font-semibold text-red-700">Save $2,000+/yr</span>
              </div>
            </div>
            <div class="flex items-baseline gap-2">
              <span class="text-lg text-neutral-400 line-through">$3,800/mo</span>
              <span class="text-4xl font-semibold text-brand-navy">$499</span>
              <span class="text-lg font-normal text-neutral-400">/month</span>
            </div>
            <p class="text-sm text-neutral-500 text-center">
              vs. $45,000+/year for full-time bookkeeper
            </p>
            
            <!-- ROI Calculator Link -->
            <div class="mt-4 inline-flex items-center gap-2 rounded-lg bg-brand-gold/10 px-4 py-2 text-sm">
              <svg class="h-4 w-4 text-brand-navy" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 7h6m0 10v-3m-3 3h.01M9 17h.01M9 14h.01M12 14h.01M15 11h.01M12 11h.01M9 11h.01M7 21h10a2 2 0 002-2V5a2 2 0 00-2-2H7a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
              </svg>
              <span class="font-medium text-brand-navy">Calculate your exact savings:</span>
              <a href="/roi-calculator" class="font-semibold text-brand-navy underline hover:no-underline">
                ROI Calculator â†’
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing Tiers -->
    <section class="section bg-white">
      <div class="container">
        <div class="mx-auto max-w-content-xl">
          <div class="text-center">
            <span class="eyebrow mx-auto">Plans</span>
            <h2 class="text-balance">Choose the fit that matches your books</h2>
            <p class="text-body-lg text-neutral-500">
              Every engagement includes monthly reconciliation, real-time reporting, and unlimited support from a dedicated bookkeeping team.
            </p>
          </div>

          <div class="mt-16 grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            <!-- Starter Plan -->
            <div class="surface flex flex-col gap-8 p-8 relative">
              <div class="text-center">
                <div class="inline-flex items-center gap-2 rounded-full bg-blue-100 px-3 py-1 text-xs font-semibold text-blue-800 mb-3">
                  ðŸ‘¥ Most Popular for New Businesses
                </div>
                <h3 class="card-title">Starter</h3>
                <p class="card-subtitle mt-3">Perfect for owner-operators with straightforward books</p>
                <div class="mt-6 text-brand-navy">
                  <div class="flex items-center justify-center gap-2 mb-2">
                    <span class="text-lg text-neutral-400 line-through">$2,500/mo</span>
                    <div class="inline-flex items-center gap-1 rounded-full bg-green-100 px-2 py-1">
                      <span class="text-xs font-semibold text-green-700">Save 80%</span>
                    </div>
                  </div>
                  <span class="text-4xl font-semibold">$499</span>
                  <span class="ml-1 text-sm text-neutral-400">/month</span>
                </div>
                <p class="mt-2 text-sm text-neutral-400">Up to 75 transactions/month</p>
              </div>

              <ul class="flex flex-col gap-3 text-sm text-neutral-500">
                {[
                  'Monthly bank and credit card reconciliation',
                  'Cash-basis financial statements',
                  'Expense categorization & receipt matching',
                  'QuickBooks Online setup & maintenance',
                ].map(feature => (
                  <li class="flex items-start gap-3">
                    <svg class="mt-0.5 h-5 w-5 text-brand-gold" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a
                href="/contact?plan=starter"
                class="btn btn-outline w-full justify-center"
                aria-label="Get started with Starter plan"
              >
                Book a 15-min Consult
              </a>
            </div>

            <!-- Growth Plan -->
            <div class="relative flex flex-col gap-8 rounded-2xl border border-brand-gold bg-brand-sky/40 p-8 shadow-card">
              <div class="absolute -top-4 left-1/2 -translate-x-1/2">
                <span class="rounded-full bg-brand-navy px-4 py-1 text-xs font-semibold uppercase tracking-widest text-white">
                  Most Popular
                </span>
              </div>

              <div class="text-center">
                <h3 class="card-title">Growth</h3>
                <p class="card-subtitle mt-3">For expanding teams with multiple systems</p>
                <div class="mt-6 text-brand-navy">
                  <span class="text-4xl font-semibold">$899</span>
                  <span class="ml-1 text-sm text-neutral-400">/month</span>
                </div>
                <p class="mt-2 text-sm text-neutral-400">Up to 300 transactions/month</p>
              </div>

              <ul class="flex flex-col gap-3 text-sm text-neutral-500">
                {[
                  'Everything in Starter',
                  'Accounts payable & receivable workflows',
                  'Monthly management reporting pack',
                  'Phone, SMS, and Slack support',
                  'Budget vs. actual variance reviews',
                ].map(feature => (
                  <li class="flex items-start gap-3">
                    <svg class="mt-0.5 h-5 w-5 text-brand-gold" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a
                href="/contact?plan=growth"
                class="btn btn-primary w-full justify-center"
                aria-label="Get started with Growth plan"
              >
                Book a 15-min Consult
              </a>
            </div>

            <!-- Pro Plan -->
            <div class="surface flex flex-col gap-8 p-8">
              <div class="text-center">
                <h3 class="card-title">Pro</h3>
                <p class="card-subtitle mt-3">Best for multi-entity and inventory-heavy teams</p>
                <div class="mt-6 text-brand-navy">
                  <span class="text-4xl font-semibold">$1,499</span>
                  <span class="ml-1 text-sm text-neutral-400">/month</span>
                </div>
                <p class="mt-2 text-sm text-neutral-400">Unlimited transactions</p>
              </div>

              <ul class="flex flex-col gap-3 text-sm text-neutral-500">
                {[
                  'Everything in Growth',
                  'Inventory and job costing support',
                  'Multi-entity consolidation',
                  'Dedicated senior account manager',
                  'Quarterly strategy and tax prep calls',
                ].map(feature => (
                  <li class="flex items-start gap-3">
                    <svg class="mt-0.5 h-5 w-5 text-brand-gold" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                    {feature}
                  </li>
                ))}
              </ul>

              <a
                href="/contact?plan=pro"
                class="btn btn-outline w-full justify-center"
                aria-label="Get started with Pro plan"
              >
                Schedule a Discovery Call
              </a>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Lead Capture Section -->
    <section class="section bg-neutral-25">
      <div class="container">
        <div class="grid gap-10 lg:grid-cols-[0.8fr_0.9fr] lg:items-start">
          <div class="max-w-xl space-y-6">
            <span class="eyebrow">Next steps</span>
            <h2 class="text-3xl font-semibold text-brand-navy md:text-4xl">Map pricing to your transaction volume</h2>
            <p class="text-body-lg text-neutral-600">
              Share your approximate monthly transaction count, team structure, and the tools youâ€™re currently using.
              Weâ€™ll confirm the best-fit plan, surface quick wins, and send onboarding next steps within one business day.
            </p>
            <ul class="space-y-3 text-sm text-neutral-500">
              <li class="flex items-start gap-3">
                <svg class="mt-1 h-5 w-5 flex-shrink-0 text-brand-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Custom pricing confirmation for your transaction count and tools.
              </li>
              <li class="flex items-start gap-3">
                <svg class="mt-1 h-5 w-5 flex-shrink-0 text-brand-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Onboarding roadmap with deliverables and key milestones.
              </li>
              <li class="flex items-start gap-3">
                <svg class="mt-1 h-5 w-5 flex-shrink-0 text-brand-gold" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                </svg>
                Transparent quote with scope, pricing, and kickoff options.
              </li>
            </ul>
          </div>

          <LeadForm
            class="h-full"
            eyebrow="Pricing consult"
            heading="Confirm the right tier for your books"
            subheading="Your dedicated advisor will audit transaction volume, clean-up needs, and integrations, then match you to the right plan."
            ctaLabel="Review my pricing"
            successMessage="Thanks! Weâ€™ll review your transaction mix and send a personalized pricing recommendation within one business day."
            source="pricing-page"
          />
        </div>
      </div>
    </section>

    <!-- Add-ons Section -->
    <section class="section bg-neutral-25">
      <div class="container">
        <div class="mx-auto max-w-content-lg">
          <div class="text-center">
            <span class="eyebrow mx-auto">Add-ons</span>
            <h2 class="text-balance">Scale support exactly when you need it</h2>
            <p class="text-body-lg text-neutral-500">
              Layer on specialized projects or seasonal coverage without changing your core plan.
            </p>
          </div>

          <div class="mt-14 grid gap-6 md:grid-cols-2">
            {[
              {
                title: 'Clean Books Service',
                description: 'One-time deep clean to bring legacy books up to audit-ready status.',
                price: '$1,750 one-time',
                query: 'clean-books',
                features: [
                  'Historical data reconstruction and cleanup',
                  'Account and class recoding',
                  'Catch-up reconciliation for prior periods',
                  'Audit trail documentation and hand-off',
                ],
              },
              {
                title: 'Tax Season Support',
                description: 'Extra bandwidth and coordination during the busiest four months.',
                price: '$350/month (Janâ€“Apr)',
                query: 'tax-season',
                features: [
                  'CPA and tax preparer coordination',
                  'Quarterly estimated tax reminders',
                  'Supporting documentation packaging',
                  'Priority response window',
                ],
              },
            ].map(addon => (
              <div class="surface flex flex-col gap-6 p-8">
                <div>
                  <h3 class="card-title">{addon.title}</h3>
                  <p class="mt-3 text-sm text-neutral-500">{addon.description}</p>
                </div>
                <div class="text-2xl font-semibold text-brand-navy">{addon.price}</div>
                <ul class="flex flex-col gap-2 text-sm text-neutral-500">
                  {addon.features.map(item => (
                    <li class="flex items-start gap-2">
                      <svg class="mt-1 h-4 w-4 text-brand-gold" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                      {item}
                    </li>
                  ))}
                </ul>
                <a
                  href={`/contact?addon=${addon.query}`}
                  class="btn btn-ghost w-fit"
                  aria-label={`Learn more about ${addon.title}`}
                >
                  Learn More
                </a>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <FAQAccordion />
    <CTASection />
    </div>

</Layout>