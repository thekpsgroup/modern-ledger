---
import Layout from '../layouts/Layout.astro';
import { getEnv } from '../lib/env';

const env = getEnv();
const pageTitle = "Case Studies | Modern Ledger Success Stories";
const pageDescription = "Read real success stories from businesses that transformed their financial management with Modern Ledger's bookkeeping services.";
const canonicalUrl = `${env.SITE_URL}/case-studies`;
---

<Layout title={pageTitle} description={pageDescription} canonical={canonicalUrl}>
  <div class="min-h-screen bg-white">
    <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            Success <span class="text-blue-600">Stories</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            Real results from real businesses that transformed their financial management with our help.
          </p>
        </div>
      </div>
    </section>

    <section class="py-20">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Coming Soon
        </h2>
        <p class="text-lg text-gray-600">
          We're currently compiling detailed case studies showcasing our clients' success.
          Check back soon to read about businesses that improved their financial management,
          saved time, and grew their operations with Modern Ledger's services.
        </p>
      </div>
    </section>
  </div>

  <!-- Structured Data: Article Collection -->
  <script type="application/ld+json" set:html={
    JSON.stringify({
      "@context": "https://schema.org",
      "@type": "ItemList",
      "name": "Modern Ledger Case Studies",
      "description": "Success stories from businesses that transformed their financial management with Modern Ledger",
      "url": "https://modernledger.co/case-studies",
      "numberOfItems": 0,
      "itemListElement": []
    })
  }></script>
</Layout>