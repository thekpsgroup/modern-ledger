---
import Layout from '../../layouts/Layout.astro';
import { getEnv } from '../../lib/env';

const env = getEnv();
const pageTitle = "Clean Books Service | Modern Ledger";
const pageDescription = "Get your books cleaned up and organized. Professional cleanup of messy financial records for accurate reporting and tax preparation.";
const canonicalUrl = `${env.SITE_URL}/services/clean-books`;
---

<Layout title={pageTitle} description={pageDescription} canonical={canonicalUrl}>
  <div class="min-h-screen bg-white">
    <section class="bg-gradient-to-br from-purple-50 to-indigo-100 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            Clean <span class="text-purple-600">Books</span> Service
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            Transform messy financial records into clean, organized, and accurate books.
          </p>
          <a href="/contact?addon=clean-books" class="bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
            Get Your Books Cleaned
          </a>
        </div>
      </div>
    </section>

    <section class="py-20">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Coming Soon
        </h2>
        <p class="text-lg text-gray-600">
          This service page is currently under development. Please check back soon or contact us for more information.
        </p>
      </div>
    </section>
  </div>
</Layout>