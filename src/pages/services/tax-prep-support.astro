---
import Layout from '../../layouts/Layout.astro';
import { getEnv } from '../../lib/env';
import LeadForm from '../../components/LeadForm.astro';

const env = getEnv();
const pageTitle = "CFO Advisory & Tax Preparation Support - Maximize Deductions & Minimize Stress - Modern Ledger";
const pageDescription = "Expert CFO advisory and tax preparation support that maximizes your deductions, ensures compliance, and eliminates tax season stress. Get strategic financial guidance from experienced professionals.";
const canonicalUrl = `${env.SITE_URL}/services/tax-prep-support`;
