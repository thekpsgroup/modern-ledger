---
import Layout from '../../layouts/Layout.astro';
import { getEnv } from '../../lib/env';

const env = getEnv();
const pageTitle = "Tax Preparation Support | Modern Ledger";
const pageDescription = "Professional tax preparation support that organizes books, gathers documents, and collaborates with CPAs to keep filings accurate, timely, and stress-free.";
const canonicalUrl = `${env.SITE_URL}/services/tax-prep-support`;
---

<Layout title={pageTitle} description={pageDescription} canonical={canonicalUrl}>
  <div class="min-h-screen bg-white">
    <section class="bg-gradient-to-br from-blue-50 to-cyan-100 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            Tax Preparation <span class="text-blue-600">Support</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            Expert tax preparation support to ensure your books are tax-ready and compliant.
          </p>
          <a href="/contact?addon=tax-season" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
            Get Tax-Ready
          </a>
        </div>
      </div>
    </section>

    <section class="py-20">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Coming Soon
        </h2>
        <p class="text-lg text-gray-600">
          This service page is currently under development. Please check back soon or contact us for more information.
        </p>
      </div>
    </section>
  </div>
</Layout>