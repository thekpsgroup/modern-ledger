---
import Layout from '../../layouts/Layout.astro';
import { getEnv } from '../../lib/env';
import LeadForm from '../../components/LeadForm.astro';

const env = getEnv();
const pageTitle = "Payroll Integration That Eliminates Accounting Chaos - Modern Ledger";
const pageDescription = "Seamlessly integrate payroll with accounting to automate journal entries, track liabilities, and ensure compliance. No more manual spreadsheets or reconciliation nightmares.";
const canonicalUrl = `${env.SITE_URL}/services/payroll-integration`;
---

<Layout title={pageTitle} description={pageDescription} canonical={canonicalUrl}>
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-orange-50 to-red-100 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            Payroll Integration That <span class="text-orange-600">Eliminates Accounting Chaos</span>
