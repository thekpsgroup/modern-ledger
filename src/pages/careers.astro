---
import Layout from '../layouts/Layout.astro';
import { getEnv } from '../lib/env';

const env = getEnv();
const pageTitle = "Careers | Join the Modern Ledger Team";
const pageDescription = "Join our growing team of accounting professionals. We're always looking for talented individuals passionate about helping small businesses succeed.";
const canonicalUrl = `${env.SITE_URL}/careers`;
---

<Layout title={pageTitle} description={pageDescription} canonical={canonicalUrl}>
  <div class="min-h-screen bg-white">
    <section class="bg-gradient-to-br from-purple-50 to-pink-100 py-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
          <h1 class="text-4xl md:text-6xl font-bold text-gray-900 mb-6">
            Join Our <span class="text-purple-600">Team</span>
          </h1>
          <p class="text-xl text-gray-600 mb-8 max-w-3xl mx-auto">
            Help small businesses thrive by joining our team of dedicated accounting professionals.
          </p>
        </div>
      </div>
    </section>

    <section class="py-20">
      <div class="max-w-4xl mx-auto text-center px-4 sm:px-6 lg:px-8">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          No Open Positions Currently
        </h2>
        <p class="text-lg text-gray-600 mb-8">
          We're not currently hiring, but we always keep an eye out for talented accounting professionals.
          If you're passionate about helping small businesses succeed, we'd love to hear from you.
        </p>
        <div class="bg-gray-50 rounded-lg p-8">
          <h3 class="text-xl font-semibold text-gray-900 mb-4">What We're Looking For</h3>
          <ul class="text-left space-y-3 text-gray-600">
            <li class="flex items-center">
              <svg class="w-5 h-5 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              Experience with QuickBooks and accounting software
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              Attention to detail and accuracy
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              Passion for helping small businesses
            </li>
            <li class="flex items-center">
              <svg class="w-5 h-5 text-purple-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
              </svg>
              Strong communication skills
            </li>
          </ul>
        </div>
        <div class="mt-8">
          <a href="/contact" class="bg-purple-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-purple-700 transition-colors">
            Send Us Your Resume
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>