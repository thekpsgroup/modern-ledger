  ogImage="/og-home.jpg"
>
  <StickyMobileCTA />
  <ExitIntentModal />

  <div class="flex flex-col">
    <Hero />
    <TrustBar />
    <ServicesGrid />
    <TestimonialCarousel />
    <ROICalculator />
    <FAQAccordion />
    <CTASection />
  </div>
