---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import TrustBar from '../components/TrustBar.astro';
import ServicesGrid from '../components/ServicesGrid.astro';
import TestimonialHighlight from '../components/TestimonialHighlight.astro';
import TestimonialCarousel from '../components/TestimonialCarousel.astro';
import ROICalculator from '../components/ROICalculator.astro';
import EnhancedFAQAccordion from '../components/EnhancedFAQAccordion.astro';
import EnhancedCTASection from '../components/EnhancedCTASection.astro';
import ProgressiveLeadForm from '../components/ProgressiveLeadForm.astro';
import StickyMobileCTA from '../components/StickyMobileCTA.astro';
import ExitIntentModal from '../components/ExitIntentModal.astro';
---

<Layout
  title="Modern Ledger - Bookkeeping Services | Royse City, TX"
  description="Bookkeeping without the payroll baggage. Monthly reconciliation, sharp reporting, and CFO-caliber clarity for Royse City, TX businesses."
  ogImage="/og-home.jpg"
>
  <StickyMobileCTA />
  <ExitIntentModal />

  <div class="flex flex-col">
    <Hero />
    <TrustBar />
    <ServicesGrid />
    <TestimonialHighlight />
    <TestimonialCarousel />
    <ROICalculator />
    <ProgressiveLeadForm />
    <EnhancedFAQAccordion />
    <EnhancedCTASection variant="social-proof" />
  </div>
</Layout>