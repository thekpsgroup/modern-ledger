---

<footer class="bg-gray-900 text-white">
  <div class="container mx-auto px-4 py-16">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8">
      <!-- Company Info -->
      <div class="lg:col-span-2">
        <div class="flex items-center space-x-2 mb-6">
          <img
            src="/modern_ledger_256x256.png"
            width="32"
            height="32"
            alt="Modern Ledger logo"
            class="rounded-md"
          />
          <span class="font-display font-bold text-xl">Modern Ledger</span>
        </div>
        <p class="text-gray-300 mb-6 leading-relaxed">
          Professional bookkeeping services for Texas businesses. Monthly reconciliation,
          clean books, and proactive financial clarity‚Äîwithout the expensive in-house hire.
        </p>
        <div class="space-y-2 text-sm text-gray-400">
          <p>üìç Royse City, TX</p>
          <p>üìû (469) 534-3392</p>
          <p>‚úâÔ∏è sales@thekpsgroup.com</p>
        </div>
      </div>

      <!-- Services -->
      <div>
        <h3 class="font-semibold text-white mb-4">Services</h3>
        <ul class="space-y-2">
          {footerLinks.services.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors duration-200 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div>
        <h3 class="font-semibold text-white mb-4">Company</h3>
        <ul class="space-y-2">
          {footerLinks.company.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors duration-200 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div>
        <h3 class="font-semibold text-white mb-4">Resources</h3>
        <ul class="space-y-2">
          {footerLinks.resources.map(link => (
            <li>
              <a
                href={link.href}
                class="text-gray-400 hover:text-white transition-colors duration-200 text-sm"
              >
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Locations -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <h3 class="font-semibold text-white mb-4">Serving These Texas Communities</h3>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4">
        {footerLinks.locations.map(location => (
          <a
            href={location.href}
            class="text-gray-400 hover:text-white transition-colors duration-200 text-sm"
          >
            {location.label}
          </a>
        ))}
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="border-t border-gray-800 mt-12 pt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <div class="flex space-x-6 mb-4 md:mb-0">
          {socialLinks.map(social => (
            <a
              href={social.href}
              class="text-gray-400 hover:text-white transition-colors duration-200"
              aria-label={`Follow us on ${social.label}`}
            >
              <span class="sr-only">{social.label}</span>
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
