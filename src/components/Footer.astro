        <div class="text-sm text-gray-400">
          <p>&copy; 2025 Modern Ledger. All rights reserved.</p>
        </div>
      </div>

      <!-- Legal Links -->
      <div class="flex flex-wrap justify-center md:justify-end space-x-6 mt-4 text-sm">
        <a href="/privacy" class="text-gray-400 hover:text-white transition-colors duration-200">Privacy Policy</a>
        <a href="/terms" class="text-gray-400 hover:text-white transition-colors duration-200">Terms of Service</a>
        <a href="/sitemap.xml" class="text-gray-400 hover:text-white transition-colors duration-200">Sitemap</a>
