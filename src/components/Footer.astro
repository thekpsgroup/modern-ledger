// Footer data
const footerLinks = {
  services: [
    { href: '/services/bookkeeping', label: 'Bookkeeping Services' },
    { href: '/services/monthly-reconciliation', label: 'Monthly Reconciliation' },
    { href: '/services/clean-books', label: 'Clean Books Service' },
    { href: '/services/payroll-integration', label: 'Payroll Integration' },
    { href: '/services/tax-prep-support', label: 'Tax Preparation Support' },
  ],
  company: [
    { href: '/about', label: 'About Modern Ledger' },
    { href: '/case-studies', label: 'Case Studies' },
    { href: '/pricing', label: 'Pricing' },
    { href: '/blog', label: 'Blog' },
    { href: '/careers', label: 'Careers' },
  ],
  resources: [
    { href: '/roi-calculator', label: 'ROI Calculator' },
    { href: '/blog/month-end-close-checklist', label: 'Month-End Close Checklist' },
    { href: '/blog/quickbooks-cleanup', label: 'QuickBooks Cleanup Guide' },
    { href: '/blog/cash-vs-accrual', label: 'Cash vs Accrual Accounting' },
    { href: '/blog/texas-sales-tax', label: 'Texas Sales Tax Guide' },
  ],
  locations: [
    { href: '/locations/royse-city-tx', label: 'Royse City, TX' },
    { href: '/locations/fate-tx', label: 'Fate, TX' },
    { href: '/locations/rockwall-tx', label: 'Rockwall, TX' },
    { href: '/locations/caddo-mills-tx', label: 'Caddo Mills, TX' },
    { href: '/locations/greenville-tx', label: 'Greenville, TX' },
    { href: '/locations/quinlan-tx', label: 'Quinlan, TX' },
  ],
};

const columnLinkClass = 'inline-flex h-9 items-center rounded-button px-2 text-sm font-medium text-white/70 transition-colors duration-200 hover:bg-white/10 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-gold/60';
const locationLinkClass = 'inline-flex h-10 items-center justify-center rounded-lg border border-white/10 px-3 text-sm font-medium text-white/80 transition-colors duration-200 hover:bg-white/10 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-gold/60';
const legalLinkClass = 'inline-flex h-8 items-center rounded-button px-3 text-xs font-medium uppercase tracking-wide text-white/60 transition-colors duration-200 hover:bg-white/10 hover:text-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-brand-gold/60';
---

<footer class="bg-brand-navy text-white">
  <div class="container py-14">
    <div class="grid-12 gap-y-10">
      <!-- Company Info -->
      <div class="col-span-12 lg:col-span-5">
        <div class="mb-6 flex items-center gap-3">
          <img
            src="/modern_ledger_256x256.png"
            width="32"
            height="32"
            alt="Modern Ledger logo"
            class="rounded-md shadow-soft"
          />
          <span class="font-display text-xl font-semibold tracking-tight">Modern Ledger</span>
        </div>
        <p class="text-white/80">
          Professional bookkeeping services for Texas businesses. Monthly reconciliation,
          clean books, and proactive financial clarityâ€”without the expensive in-house hire.
        </p>
        <div class="mt-6 grid gap-4 text-sm text-white/70 sm:grid-cols-2 lg:grid-cols-1">
          <div>
            <p class="text-white font-semibold">Visit</p>
            <p>Royse City, TX</p>
          </div>
          <div>
            <p class="text-white font-semibold">Call</p>
            <a href="tel:+14695343392" class="hover:text-brand-gold">(469) 534-3392</a>
          </div>
          <div>
            <p class="text-white font-semibold">Email</p>
            <a href="mailto:sales@thekpsgroup.com" class="hover:text-brand-gold">sales@thekpsgroup.com</a>
          </div>
        </div>
      </div>

      <!-- Services -->
      <div class="col-span-6 sm:col-span-4 lg:col-span-2">
        <h3 class="eyebrow mb-3 text-white/70">Services</h3>
        <ul class="space-y-1.5">
          {footerLinks.services.map(link => (
            <li>
              <a href={link.href} class={columnLinkClass}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Company -->
      <div class="col-span-6 sm:col-span-4 lg:col-span-2">
        <h3 class="eyebrow mb-3 text-white/70">Company</h3>
        <ul class="space-y-1.5">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class={columnLinkClass}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Resources -->
      <div class="col-span-12 sm:col-span-4 lg:col-span-3">
        <h3 class="eyebrow mb-3 text-white/70">Resources</h3>
        <ul class="space-y-1.5">
          {footerLinks.resources.map(link => (
            <li>
              <a href={link.href} class={columnLinkClass}>
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <!-- Locations -->
    <div class="mt-14 border-t border-white/10 pt-8">
      <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <h3 class="eyebrow text-white/70">Serving These Texas Communities</h3>
        <div class="flex flex-wrap gap-2">
        {footerLinks.locations.map(location => (
          <a href={location.href} class={locationLinkClass}>
            {location.label}
          </a>
        ))}
        </div>
      </div>
    </div>

    <!-- Bottom Section -->
    <div class="mt-10 border-t border-white/10 pt-6">
      <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <p class="text-sm text-white/60">&copy; {new Date().getFullYear()} Modern Ledger. All rights reserved.</p>
        <div class="flex flex-wrap justify-center gap-2 md:justify-end">
        <a href="/privacy" class={legalLinkClass}>Privacy Policy</a>
        <a href="/terms" class={legalLinkClass}>Terms of Service</a>
        <a href="/about" class={legalLinkClass}>About</a>
        <a href="/contact" class={legalLinkClass}>Contact</a>
        <a href="/.well-known/security.txt" class={legalLinkClass}>Security</a>
        <a href="/sitemap.xml" class={legalLinkClass}>Sitemap</a>
        </div>
      </div>
      <!-- Social Media Icons -->
      <div class="mt-6 flex justify-center gap-4 md:justify-start">
