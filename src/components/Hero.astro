---
// Hero props
export interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
}

const {
  title = "Bookkeeping without the payroll baggage",
  subtitle = "Monthly reconciliation, sharp reporting, and CFO-caliber clarityâ€”without hiring in-house. Your modern, scalable alternative for clean books and proactive financial clarity.",
  ctaText = "Book a 15-min Consult",
  ctaLink = "/contact",
  backgroundImage
} = Astro.props;

// Hero data
const stats = [
  { number: '500+', label: 'Businesses Served' },
  { number: '98%', label: 'Client Retention' },
  { number: '24hrs', label: 'Average Response' },
  { number: '15+', label: 'Years Experience' },
];
---

<section class="section relative overflow-hidden" style={backgroundImage ? `background-image: url('${backgroundImage}'); background-size: cover; background-position: center;` : 'background: linear-gradient(135deg, rgba(0,43,84,0.04), rgba(202,176,104,0.08))'}>
  <!-- Background Pattern (only if no background image) -->
  {!backgroundImage && (
    <div class="pointer-events-none absolute inset-0 opacity-40">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(0, 43, 84, 0.2) 1px, transparent 0); background-size: 28px 28px;"></div>
    </div>
  )}

  <!-- Overlay for background images -->
  {backgroundImage && (
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  )}

  <div class="container relative">
    <div class="mx-auto max-w-content-lg text-center">
      <!-- Badge -->
      <div class="badge mx-auto mb-8 w-fit bg-white/80 text-brand-navy">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        Trusted by 500+ Texas Businesses
      </div>

      <!-- Headline -->
      <h1 class="text-balance" class:list={["text-brand-navy", { "text-white": backgroundImage }]}>
        {title}
      </h1>

      <!-- Subheadline -->
      <p class="text-balance text-body-lg mx-auto mb-10 max-w-content-md" class:list={["text-neutral-500", { "text-white/90": backgroundImage }]}>
        {subtitle}
      </p>

      <!-- CTAs -->
      <div class="mb-12 flex flex-col items-center justify-center gap-4 sm:flex-row">
        <a
          href={ctaLink}
          class="btn btn-primary text-lg px-8"
          aria-label={`Book a 15-minute consultation`}
        >
          {ctaText}
          <svg class="w-5 h-5 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a
          href="/pricing"
          class="btn btn-outline text-lg px-8"
          aria-label="View pricing options"
        >
          See Pricing
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="flex flex-col items-center justify-center gap-6 text-sm sm:flex-row" class:list={["text-neutral-500", { "text-white/80": backgroundImage }]}>
        <div class="flex items-center">
          <svg class="mr-2 h-5 w-5 text-brand-gold" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          No long-term contracts
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          QuickBooks certified
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Serving Rockwall County since 2010
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="mx-auto mt-16 max-w-content-xl">
      <div class="grid grid-cols-2 gap-6 md:grid-cols-4 md:gap-8">
        {stats.map(stat => (
          <div class="text-center">
            <div class="font-display text-3xl font-semibold md:text-heading-4" class:list={["text-brand-navy", { "text-white": backgroundImage }]}>
              {stat.number}
            </div>
            <div class="text-sm font-medium uppercase tracking-wider text-neutral-500" class:list={[{ "text-white/80": backgroundImage }]}>
              {stat.label}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>