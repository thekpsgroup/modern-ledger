---
// Hero props
export interface Props {
  title?: string;
  subtitle?: string;
  ctaText?: string;
  ctaLink?: string;
  backgroundImage?: string;
}

const {
  title = "Bookkeeping without the payroll baggage",
  subtitle = "Monthly reconciliation, sharp reporting, and CFO-caliber clarityâ€”without hiring in-house. Your modern, scalable alternative for clean books and proactive financial clarity.",
  ctaText = "Book a 15-min Consult",
  ctaLink = "/contact",
  backgroundImage
} = Astro.props;

// Hero data
const stats = [
  { number: '500+', label: 'Businesses Served' },
  { number: '98%', label: 'Client Retention' },
  { number: '24hrs', label: 'Average Response' },
  { number: '15+', label: 'Years Experience' },
];
---

<section class="relative py-20 lg:py-28 overflow-hidden" style={backgroundImage ? `background-image: url('${backgroundImage}'); background-size: cover; background-position: center;` : 'background: linear-gradient(to bottom right, #eff6ff, #ffffff);'}>
  <!-- Background Pattern (only if no background image) -->
  {!backgroundImage && (
    <div class="absolute inset-0 opacity-5">
      <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(14, 165, 233, 0.3) 1px, transparent 0); background-size: 20px 20px;"></div>
    </div>
  )}

  <!-- Overlay for background images -->
  {backgroundImage && (
    <div class="absolute inset-0 bg-black bg-opacity-40"></div>
  )}

  <div class="container mx-auto px-4 relative">
    <div class="max-w-4xl mx-auto text-center">
      <!-- Badge -->
      <div class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-medium mb-8">
        <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        Trusted by 500+ Texas Businesses
      </div>

      <!-- Headline -->
      <h1 class="font-display text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight" class:list={["text-gray-900", { "text-white": backgroundImage }]}>
        {title}
      </h1>

      <!-- Subheadline -->
      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto leading-relaxed" class:list={["text-gray-600", { "text-white": backgroundImage }]}>
        {subtitle}
      </p>

      <!-- CTAs -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <a
          href={ctaLink}
          class="bg-primary-600 hover:bg-primary-700 text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl"
          aria-label={`Book a 15-minute consultation`}
        >
          {ctaText}
          <svg class="w-5 h-5 inline ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <a
          href="/pricing"
          class="border-2 border-primary-600 text-primary-600 hover:bg-primary-600 hover:text-white px-8 py-4 rounded-lg font-semibold text-lg transition-all duration-200"
          aria-label="View pricing options"
        >
          See Pricing
        </a>
      </div>

      <!-- Trust Indicators -->
      <div class="flex flex-col sm:flex-row items-center justify-center gap-8 text-sm" class:list={["text-gray-500", { "text-white": backgroundImage }]}>
        <div class="flex items-center">
          <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          No long-term contracts
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          QuickBooks certified
        </div>
        <div class="flex items-center">
          <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
          Serving Rockwall County since 2010
        </div>
      </div>
    </div>

    <!-- Stats -->
    <div class="max-w-6xl mx-auto mt-20">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {stats.map(stat => (
          <div class="text-center">
            <div class="font-display text-3xl md:text-4xl font-bold mb-2" class:list={["text-primary-600", { "text-white": backgroundImage }]}>
              {stat.number}
            </div>
            <div class="text-gray-600 font-medium" class:list={[{ "text-white": backgroundImage }]}>
              {stat.label}
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>