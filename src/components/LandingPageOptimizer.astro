  @media (prefers-reduced-motion: reduce) {
    .animate-float,
    .animate-float-delayed,
    .animate-bounce,
    .animate-pulse-glow {
      animation: none;
    }
    
    .btn-cta-primary:hover {
      transform: none;
    }
  }
</style>