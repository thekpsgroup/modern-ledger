---
// Services data
const services = [
  {
    icon: '',
    title: 'Monthly Reconciliation',
    description: 'Complete bank and credit card reconciliation with variance analysis and adjusting entries.',
    features: ['Bank reconciliation', 'Credit card matching', 'Variance analysis', 'Adjusting entries']
  },
  {
    icon: '',
    title: 'Financial Reporting',
    description: 'Clean, accurate financial statements ready for tax preparation and business decisions.',
    features: ['Profit & Loss statements', 'Balance sheets', 'Cash flow reports', 'Custom dashboards']
  },
  {
    icon: '',
    title: 'Clean Books Audit',
    description: 'Comprehensive cleanup of messy books with categorization and historical data restoration.',
    features: ['Data cleanup', 'Historical reconciliation', 'Category organization', 'Audit trail']
  },
  {
    icon: '',
    title: 'Payroll Integration',
    description: 'Seamless integration with Gusto, ADP, and other payroll providers for accurate tracking.',
    features: ['Payroll reconciliation', 'Tax calculations', 'Compliance reporting', 'Multi-state support']
  },
  {
    icon: '',
    title: 'Inventory Accounting',
    description: 'Specialized inventory tracking and valuation for retail and wholesale businesses.',
    features: ['Cost of goods sold', 'Inventory valuation', 'Stock adjustments', 'Sales reporting']
  },
  {
    icon: '',
    title: 'Tax Preparation Support',
    description: 'Month-end close procedures optimized for tax season and CPA handoffs.',
    features: ['Tax-ready reports', 'CPA coordination', 'Year-end adjustments', 'Tax planning data']
  }
