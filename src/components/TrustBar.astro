---
// Trust partners data
const partners = [
  { name: 'QuickBooks', logo: '/logos/quickbooks.svg', alt: 'QuickBooks Certified ProAdvisor' },
  { name: 'Plaid', logo: '/logos/plaid.svg', alt: 'Bank feed integration with Plaid' },
  { name: 'Gusto', logo: '/logos/gusto.svg', alt: 'Payroll integration with Gusto' },
  { name: 'Bench Accounting', logo: '/logos/bench.svg', alt: 'Bench Accounting partner' },
  { name: 'CPA Network', logo: '/logos/cpa.svg', alt: 'Certified Public Accountant network' },
  { name: 'Texas Society of CPAs', logo: '/logos/tscpa.svg', alt: 'Texas Society of Certified Public Accountants' },
];
---

<section class="section-sm border-t border-neutral-100 bg-white">
  <div class="container">
    <div class="stack-sm text-center">
      <span class="eyebrow mx-auto">Trusted Tools</span>
      <p class="text-body-sm text-neutral-500">Preferred integration partners keeping your data secure.</p>
    </div>

    <div class="mt-10 flex flex-wrap items-center justify-center gap-8 md:gap-12">
      {partners.map(partner => (
        <div class="flex items-center justify-center transition-all duration-300 hover:opacity-80">
          <img
            src={partner.logo}
            alt={partner.alt}
            class="h-8 w-auto opacity-60 md:h-10"
            loading="lazy"
          />
        </div>
      ))}
    </div>

    <!-- Additional trust indicators -->
    <div class="mt-10 text-center">
      <div class="inline-flex items-center gap-2 rounded-full bg-brand-sky/70 px-5 py-2 text-xs font-semibold uppercase tracking-widest text-brand-navy">
        <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
        </svg>
        SOC 2 Type II • Bank-Level Security • 256-bit SSL
      </div>
    </div>
  </div>
</section>