---
// Navigation data
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/services/bookkeeping', label: 'Services' },
  { href: '/pricing', label: 'Pricing' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];
---

<header class="bg-white shadow-sm sticky top-0 z-30">
  <div class="container mx-auto px-4">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2" aria-label="Modern Ledger Home">
        <img src="/modern_ledger_256x256.png" width="32" height="32" alt="Modern Ledger logo" />
        <span class="font-display font-bold text-xl text-gray-900">Modern Ledger</span>
      </a>

      <!-- Desktop Navigation -->
      <nav class="hidden md:flex items-center space-x-8">
        {navItems.map(item => (
          <a
            href={item.href}
            class="text-gray-600 hover:text-primary-600 transition-colors duration-200 font-medium"
            aria-label={`Navigate to ${item.label}`}
          >
            {item.label}
          </a>
        ))}
      </nav>

      <!-- CTA Button -->
      <div class="hidden md:flex items-center space-x-4">
        <a
          href="tel:+14695343392"
          class="text-gray-600 hover:text-primary-600 transition-colors duration-200 font-medium"
          aria-label="Call Modern Ledger"
        >
          (469) 534-3392
        </a>
        <a
          href="/contact"
          class="bg-primary-600 hover:bg-primary-700 text-white px-6 py-2 rounded-lg font-medium transition-colors duration-200"
          aria-label="Book a consultation"
        >
          Book Consult
        </a>
      </div>

      <!-- Mobile Menu Button -->
      <button
        id="mobile-menu-button"
        class="md:hidden p-2 rounded-md text-gray-600 hover:text-primary-600 hover:bg-gray-100 transition-colors duration-200"
        aria-label="Toggle mobile menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>

    <!-- Mobile Navigation -->
    <div id="mobile-menu" class="md:hidden hidden pb-4">
      <nav class="flex flex-col space-y-2">
        {navItems.map(item => (
          <a
            href={item.href}
            class="text-gray-600 hover:text-primary-600 py-2 px-4 rounded-md hover:bg-gray-50 transition-colors duration-200 font-medium"
            aria-label={`Navigate to ${item.label}`}
          >
            {item.label}
          </a>
        ))}
        <div class="border-t pt-4 mt-4">
          <a
            href="tel:+14695343392"
            class="block text-gray-600 hover:text-primary-600 py-2 font-medium"
            aria-label="Call Modern Ledger"
          >
            (469) 534-3392
          </a>
          <a
            href="/contact"
            class="block bg-primary-600 hover:bg-primary-700 text-white px-4 py-3 rounded-lg font-medium text-center mt-2 transition-colors duration-200"
            aria-label="Book a consultation"
          >
            Book Consult
          </a>
        </div>
      </nav>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  if (menuButton && mobileMenu) {
    menuButton.addEventListener('click', () => {
      const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
      menuButton.setAttribute('aria-expanded', (!isExpanded).toString());
      mobileMenu.classList.toggle('hidden');

      // Update button icon
      const icon = menuButton.querySelector('svg');
      if (icon) {
        icon.innerHTML = isExpanded
          ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>'
          : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>';
      }
    });
  }
</script>