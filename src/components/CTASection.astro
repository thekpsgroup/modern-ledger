<section class="py-20 bg-primary-600 text-white">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto text-center">
      <h2 class="font-display text-3xl md:text-4xl font-bold mb-6">
        Ready to Get Your Books in Order?
      </h2>
      <p class="text-xl mb-12 opacity-90 leading-relaxed">
        Join 500+ Texas businesses who've eliminated bookkeeping stress and gained financial clarity.
        Book a free consultation and see how we can help your specific situation.
      </p>

      <!-- Primary CTA -->
      <div class="mb-12">
        <a
          href="/contact"
          class="inline-flex items-center bg-white text-primary-600 hover:bg-gray-100 px-10 py-5 rounded-lg font-bold text-xl transition-all duration-200 transform hover:scale-105 shadow-lg hover:shadow-xl"
          aria-label="Book your free 15-minute consultation"
        >
          Book Your Free 15-Minute Consult
          <svg class="w-6 h-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </a>
        <p class="text-sm mt-4 opacity-75">
          No obligation ‚Ä¢ No sales pitch ‚Ä¢ Just honest advice for your business
        </p>
      </div>

      <!-- Objection handling -->
      <div class="grid md:grid-cols-3 gap-8 mb-12">
        {objections.map(objection => (
          <div class="text-center">
            <div class="text-4xl mb-4">{objection.icon}</div>
            <h3 class="font-semibold text-lg mb-2">
              {objection.title}
            </h3>
            <p class="text-sm opacity-90 leading-relaxed">
              {objection.description}
            </p>
          </div>
        ))}
      </div>

      <!-- Secondary CTA -->
      <div class="border-t border-white/20 pt-8">
        <p class="text-lg mb-6">
          Not ready to book yet? Download our free Month-End Close Checklist.
        </p>
        <a
          href="/roi-calculator"
          class="inline-flex items-center bg-primary-500 hover:bg-primary-400 text-white px-8 py-4 rounded-lg font-semibold transition-all duration-200"
          aria-label="Get the free month-end close checklist"
        >
          Get Free Checklist
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
