---
import Layout from './Layout.astro';
import CTASection from '../components/CTASection.astro';
import Heading from '../components/Heading.astro';

export interface Props {
  title: string;
  description: string;
  city: string;
  canonical?: string;
}

const {
  title,
  description,
  city,
  canonical
} = Astro.props;
---

<Layout
  title={title}
  description={description}
  canonical={canonical}
>
  <div class="min-h-screen bg-white">
    <!-- Hero Section -->
    <section class="relative py-20 bg-gradient-to-br from-brand-sky/30 to-blue-50">
      <div class="absolute inset-0 bg-black/10"></div>
      <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <slot name="hero" />
      </div>
    </section>

    <!-- Main Content -->
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
      <slot />
    </div>

    <!-- Local Area Map Placeholder -->
    <section class="bg-gray-50 py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl font-bold text-brand-navy mb-4">Serving {city}, Texas</h2>
        <p class="text-gray-600 mb-8">Professional bookkeeping services available throughout the {city} area</p>
        <div class="bg-white rounded-lg shadow-card p-8 border border-gray-100">
          <div class="aspect-video bg-gray-200 rounded-lg flex items-center justify-center">
            <p class="text-gray-500">Interactive map of {city} service area</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Final CTA Section -->
    <CTASection />
  </div>
</Layout>