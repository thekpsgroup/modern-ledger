{
  "name": "modern-ledger",
  "version": "1.0.0",
  "description": "Modern Ledger - A comprehensive CLI-driven Astro website for financial services",
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "prebuild": "node scripts/fetch-cities.mjs",
    "preview": "astro preview",
    "astro": "astro",
    "gen:city-pages": "node --import tsx scripts/gen-city-pages.ts",
    "gen:content-plan": "node --import tsx scripts/gen-content-plan.ts",
    "seo:check": "node --import tsx scripts/seo-check.ts",
    "seo:sitemaps": "node --import tsx scripts/seo-sitemaps.ts",
    "qa:links": "node --import tsx scripts/link-checker.mjs",
    "qa:lighthouse": "node --import tsx scripts/qa-lighthouse.ts",
    "qa:emojis": "node scripts/emoji-check.mjs",
    "pixels:build": "node --import tsx scripts/pixels-build.ts",
    "events:ssr": "node --import tsx scripts/events-ssr.ts",
    "forms:serve": "node --import tsx scripts/forms-serve.ts",
    "ab:variants": "node --import tsx scripts/ab-variants.ts",
    "blog:generate": "node scripts/generate-daily-blog.mjs generate",
    "blog:test": "node scripts/generate-daily-blog.mjs test",
    "blog:schedule": "node scripts/generate-daily-blog.mjs schedule",
    "blog:schedule:install": "powershell -ExecutionPolicy Bypass -File scripts/schedule-blog.ps1 -Install",
    "blog:schedule:uninstall": "powershell -ExecutionPolicy Bypass -File scripts/schedule-blog.ps1 -Uninstall",
    "blog:schedule:status": "powershell -ExecutionPolicy Bypass -File scripts/schedule-blog.ps1 -Status",
    "design:check": "node scripts/design-system-check.mjs",
    "deploy:vercel": "vercel --prod",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:visual": "playwright test --grep 'Visual Regression'",
    "test:update-snapshots": "playwright test --update-snapshots",
    "test:e2e": "playwright test --grep 'Modern Ledger E2E'",
    "ci": "npm run qa:emojis && npm run design:check && npm run build && npm run design:check && npm run qa:lighthouse && npm run seo:check && npm run test",
    "prepare": "husky"
  },
  "dependencies": {
    "@astrojs/check": "^0.5.10",
    "@astrojs/mdx": "^2.3.1",
    "@astrojs/node": "^8.2.5",
    "@astrojs/react": "^3.6.3",
    "@astrojs/sitemap": "^3.6.0",
    "@astrojs/tailwind": "^5.1.0",
    "@astrojs/vercel": "^7.7.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^20.11.24",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "astro": "^4.5.16",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "js-yaml": "^4.1.0",
    "jsdom": "^23.2.0",
    "node-fetch": "^3.3.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.55.1",
    "@types/cors": "^2.8.17",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/jsdom": "^21.1.6",
    "axe-core": "^4.10.3",
    "glob": "^10.3.10",
    "husky": "^9.1.7",
    "sharp": "^0.34.4",
    "ts-node": "^10.9.2"
  }
}
