  <!-- Eyes -->
  <circle cx="88" cy="88" r="4" fill="#2D3748"/>
  <circle cx="112" cy="88" r="4" fill="#2D3748"/>
  <circle cx="89" cy="86" r="1.5" fill="#FFFFFF"/>
  <circle cx="113" cy="86" r="1.5" fill="#FFFFFF"/>

  <!-- Eyebrows -->
  <ellipse cx="88" cy="82" rx="6" ry="2" fill="#2D3748"/>
  <ellipse cx="112" cy="82" rx="6" ry="2" fill="#2D3748"/>

  <!-- Nose -->
  <ellipse cx="100" cy="95" rx="2" ry="3" fill="#E8B4A4"/>

  <!-- Mouth -->
  <path d="M 95 105 Q 100 110 105 105" stroke="#C53030" stroke-width="2" fill="none" stroke-linecap="round"/>

  <!-- Shirt -->
  <rect x="65" y="130" width="70" height="50" rx="35" fill="#4A5568"/>
  <rect x="75" y="140" width="50" height="30" rx="25" fill="#2D3748"/>
