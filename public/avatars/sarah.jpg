    <radialGradient id="hairGradient" cx="50%" cy="20%" r="60%">
      <stop offset="0%" style="stop-color:#8B4513"/>
      <stop offset="100%" style="stop-color:#654321"/>
    </radialGradient>
  </defs>

  <!-- Background -->
  <circle cx="100" cy="100" r="100" fill="#F8FAFC"/>

  <!-- Hair -->
  <ellipse cx="100" cy="75" rx="45" ry="35" fill="url(#hairGradient)"/>
  <ellipse cx="100" cy="70" rx="40" ry="25" fill="url(#hairGradient)"/>
